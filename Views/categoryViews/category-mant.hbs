<h1 class="display-1 text-center mt-5">CATEGORY MANTAINENCE </h1>
<a href="/category/category-add" class="btn btn-success mb-3">New author</a>

<div class="row">
    {{#if IsEmpty}}
    <div class="flex col-12">
        <h1 class="text-center"> There is no categories</h1>
    </div>
    {{/if}}
    {{#each categories}}
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h5 class="card-title">{{this.description}}</h5>
                <div class="d-flex  flex-row-reverse gap-1">
                    <form action="/category/category-delete" method="POST" onsubmit="return confirm('You sure you want to delete this category?');">
                        <input type="hidden" name="id" id="id" value="{{this.id}}"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/category/category-edit/{{this.id}}" class="btn btn-info">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>