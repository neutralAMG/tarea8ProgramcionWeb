
<div class="container mt-5">
<h1 class="display-1 text-center mt-5">AUTHOR MANTAINENCE </h1>
<div class="d-flex justify-content-center ">
<a href="/author/author-add" class="btn btn-success mb-3">New author</a>
</div>
<div class="row justify-content-center">
    <div class="col-lg-10 col-mb-12 mb-3">
           <table class="table table-striped text-center">
        <thead>
            <tr>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">ERmail</th>
                <th scope="col" class="text-center">Book Count</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each authors}}
            <tr>
                 <th scope="row">{{this.name}}</th>
            <th>{{this.email}}</th>
            <th>{{this.bookCount}}</th>
            <th> <div class="d-flex justify-content-center gap-2">
                    <form action="/author/author-delete" method="POST" onsubmit="return confirm('You sure you want to delete this author?');">
                        <input type="hidden" name="id" id="id" value="{{this.id}}"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/author/author-edit/{{this.id}}" class="btn btn-info">Edit</a>
                </div>
                </th>
            </tr>
           
            {{/each}}
        </tbody>
    </table>
    </div>
  </div>
</div>