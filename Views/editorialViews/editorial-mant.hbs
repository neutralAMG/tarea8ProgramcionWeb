<h1 class="display-1 text-center mt-5">EDITORIAL MANTAINENCE </h1>
<a href="/editorial/editorial-add" class="btn btn-success mb-3">New author</a>

<div class="row">
    {{#if IsEmpty}}
    <div class="flex col-12">
        <h1 class="text-center"> There is no editorials</h1>
    </div>
    {{/if}}
    {{#each editorials}}
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h5 class="card-title">{{this.phone}}</h5>
                <h5 class="card-title">{{this.country}}</h5>
                <div class="d-flex  flex-row-reverse gap-1">
                    <form action="/editorial/editorial-delete" method="POST" onsubmit="return confirm('You sure you want to delete this editorial?');">
                        <input type="hidden" name="id" id="id" value="{{this.id}}"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/editorial/editorial-edit/{{this.id}}" class="btn btn-info">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>